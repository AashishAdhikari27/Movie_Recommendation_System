   "source": [
    "# mergiing the two datasets \n",
    "\n",
    "ratings = pd.merge(movies,ratings).drop(['genres','timestamp'],axis=1)\n",
    "ratings\n"
   ]
  },
  {
   "cell_type": "raw",
   "id": "fd90dbe8-a967-426d-a3bc-2362a9f4e9a3",
   "metadata": {},
   "source": [
    "pt = ratings.pivot_table(index='userId',columns='title',values='rating')"
   ]
  },
  {
   "cell_type": "raw",
   "id": "ec21b041-8102-46ff-97ae-f8e9eb55ce3d",
